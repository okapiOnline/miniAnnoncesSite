{% extends 'AnnoncesBackendBundle::layout.html.twig' %}
{% block body %}

            <div class="col-md-6 col-md-offset-3 well">

                {{ form_start(form) }}
                <form class="form-horizontal">
                    <fieldset>
                        <div class="form-group">
                            <label for="inputName" class="col-md-12">Nom</label>
                            <div class="col-md-12">
                                {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Nom'} }) }}

                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputFirstname" class="col-md-12">Pr√©nom</label>
                            <div class="col-md-12">
                                {{ form_widget(form.lastname, { 'attr': {'class': 'form-control', 'placeholder': 'Prenom'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputFirstname" class="col-md-12">Roles</label>
                            <div class="col-md-12">
                                {{ form_widget(form.roles, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputEmail" class="col-md-12">E-mail</label>
                            <div class="col-md-12">
                                {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Adresse email'} }) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputPassword" class="col-md-12">Mot de passe</label>
                            <div class="col-md-12">
                                {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'} }) }}

                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputPassword" class="col-md-12">Repeter</label>
                            <div class="col-md-12">
                                {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'Repeter le Mot de passe'} }) }}

                            </div>
                        </div>
                        {{ form_row(form._token) }}
                        <div class="form-group">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-block btn-primary">S'inscrire</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
                {{ form_end(form) }}


            </div>

{% endblock %}